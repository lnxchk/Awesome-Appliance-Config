<VirtualHost *:80>
  ServerAdmin webmaster@localhost

  DocumentRoot <%= node['aar']['document_root'] %>

  <Directory />
     Options FollowSymLinks
     AllowOverride None
  </Directory>

  <Directory <%= node['aar']['document_root'] %>/>
     Options Indexes FollowSymLinks MultiViews
     AllowOverride None
     Order allow,deny
     allow from all
  </Directory>

  LogLevel warn
</VirtualHost>

